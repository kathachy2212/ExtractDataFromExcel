@{
    ViewData["Title"] = "Upload Excel";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Upload" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label for="file" class="form-label">Select Excel or CSV File:</label>
        <input type="file" name="file" class="form-control" accept=".xlsx,.csv" required />
    </div>
    <button type="submit" class="btn btn-success">Upload</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
